<resources>

    
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>
    
	
    <!-- Main Activity -->
    <style name="DialogTheme" parent="android:Theme.Holo.Light">
	    <item name="android:windowActionBar">false</item>
	    <item name="android:windowNoTitle">true</item>
	</style>
    
	<!-- Button Text Style -->
	<style name="button_text_style" >
		<item name="android:layout_width" >wrap_content</item>
		<item name="android:layout_height" >match_parent</item>
		<item name="android:gravity" >center</item>
		<item name="android:enabled" >false</item>
		<item name="android:textColor" >#ffffff</item>
		<item name="android:typeface" >normal</item>
		<item name="android:textStyle" >normal</item>
	</style>
    
    
    <!-- Draw Theme -->
    <style name="DrawTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/DrawTheme.ActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/DrawTheme.ActionBar.OverFlow</item>
    </style>

    <style name="DrawTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/draw</item>
        <item name="android:titleTextStyle">@style/DrawTheme.ActionBar.Text</item>
        <item name="android:displayOptions">showHome|useLogo</item>
        <!-- -->
    </style>
	
    <style name="DrawTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="DrawTheme.ActionBar.OverFlow" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    	<item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>
    
    
    
    
    <!-- Share Theme -->
    <style name="ShareTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/ShareTheme.ActionBar</item>
    </style>

    <style name="ShareTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/share</item>
        <item name="android:titleTextStyle">@style/ShareTheme.ActionBar.Text</item>
    </style>
	
    <style name="ShareTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    
 
    
    
    

</resources>
